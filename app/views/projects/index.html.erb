<h1>Projects#index</h1>

<%= link_to "Add a New Project", new_project_path, class: "button" %>
<br>
<br>
  
  <div class="wrapper">
    <% @projects.each do |project| %>
      <div class="pin">
        <%= link_to image_tag(project.image_url(:thumb)), "/projects/#{project.id}" %>
        <strong>
          <%= link_to project.title, "/projects/#{project.id}" %>
        </strong> <br> 
        <span> by <%# user_id%></span>

        <p><%= project.description %></p> 
        <p>Goal: <%= project.goal %></p>  <br>
      </div>

    <% end %>
  </div>
